{
  "name": "use-legend",
  "version": "0.0.0",
  "private": true,
  "description": "utility library for Legend-State",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs:dev": "pnpm --filter docs docs:dev",
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:browser": "pnpm -r --filter @usels/core --filter @usels/integrations test:browser",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "jsdom": "^25.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "pnpm": {
    "overrides": {
      "@legendapp/state": "3.0.0-beta.44"
    }
  }
}
