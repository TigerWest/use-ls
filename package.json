{
  "name": "use-legend",
  "version": "0.0.0",
  "private": true,
  "description": "utility library for Legend-State",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs:dev": "pnpm --filter docs docs:dev",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/**' build",
    "dev": "pnpm -r dev",
    "prepare": "husky",
    "test": "vitest run && pnpm test:browser",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:browser": "pnpm -r --filter @usels/core --filter @usels/integrations test:browser",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"packages/*/src/**/*.{ts,tsx}\" --max-warnings=0 --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "eslint --max-warnings=0 --fix"
    ],
    "packages/*/src/**/*.{js,jsx,json,md,mdx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.0.0",
    "@usels/eslint-plugin": "workspace:*",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "lint-staged": "^16.3.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "pnpm": {
    "overrides": {
      "@legendapp/state": "3.0.0-beta.44"
    }
  }
}
